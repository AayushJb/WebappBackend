                  <thead style="color:#fff; background: #000000; ">

                   
                    <tr >
                      <th style="text-align: center;">Particulars</th>
                      <th style="text-align: center;">Yesterday</th>
                      <th style="text-align: center;">This Month</th>
                     
                    </tr>

                  
                  </thead>
                  <tbody>
            
              
                    
                    <tr  style=" border: 1px ">
                      <td>Commercial Win Count</td>
                      <td>{{WinCountDay}}</td>
                      <td>{{WinCountMonth}}</td>
                    </tr>

                     <tr  style=" border: 1px ">
                      <td>Commercial Win Final Value</td>
                      <td>{{WinFinalAmountDay}}</td>
                      <td>{{WinFinalAmountMonth}}</td>
                    </tr>

                     <tr  style=" border: 1px ">
                      <td>Sales</td>
                      <td>{{SalesDay}}</td>
                      <td>{{SalesMonth}}</td>
                    </tr>

                    
                     <tr  style=" border: 1px ">
                      <td>Receipt</td>
                      <td>{{ReceiptDay}}</td>
                      <td>{{ReceiptMonth}}</td>
                    </tr>

                     <tr  style=" border: 1px ">
                      <td>Pipeline Count</td>
                      <td>{{PipelineCountDay}}</td>
                      <td>{{PipelineCountMonth}}</td>
                    </tr>

                     <tr  style=" border: 1px ">
                      <td>Pipeline Final Amount</td>
                      <td>{{PipelineFinalAmountDay}}</td>
                      <td>{{PipelineFinalAmountMonth}}</td>
                    </tr>

                     <tr  style=" border: 1px ">
                      <td>O/s Receivable WEBAPP</td>
                      <td>-</td>
